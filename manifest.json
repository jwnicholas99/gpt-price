{
    "name": "ChatGPT Pricing Calculator",
    "version": "1.0.0",
    "description": "quick and convenient pricing calculator for using ChatGPT",
    "manifest_version": 3,
    "author": "jwnicholas99",
    "action":{
        "default_popup": "popup.html",
        "default_title": "ChatGPT Pricing Calculator"
    },
    "permissions": [
        "tabs",
        "storage",
        "contextMenus"
    ],
    "background": {
        "service_worker": "eventPage.js"
    },
    "icons": {
        "16": "assets/images/icon_16x16.png",
        "32": "assets/images/icon_32x32.png",
        "48": "assets/images/icon_48x48.png",
        "128": "assets/images/icon_128x128.png"
    }
}